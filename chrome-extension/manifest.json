{
  "manifest_version": 2,
  "name": "Trading212 CSV exporter",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["https://live.trading212.com/", "https://demo.trading212.com/"],
      "js": ["background.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"]
}

